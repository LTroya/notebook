<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/image_item_note"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/text_item_note_title"
        android:text="Android Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/image_item_note"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/text_item_note_body"
        android:text="So this is how our note text should look, it's not pretty but I think it should be"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_item_note_title"
        android:layout_toRightOf="@+id/image_item_note"
        android:layout_toEndOf="@+id/image_item_note"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true" />
</RelativeLayout>
